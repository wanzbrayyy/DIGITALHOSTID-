<%- include('../partials/header', { title: 'Kelola Produk' }) %>

<style>
    /*
    ============================================
    --- ADMIN PRODUCTS PAGE STYLING ---
    ============================================
    */
    .page-header { margin-bottom: 2.5rem; }
    .page-header h1 {
        font-size: 2.8rem; font-weight: 800; display: flex; align-items: center; gap: 15px;
    }
    .page-header h1 i {
        background: var(--gradient-primary); -webkit-background-clip: text; -webkit-text-fill-color: transparent;
    }
    .page-header p { font-size: 1.1rem; color: var(--color-text-muted); max-width: 600px; }

    .product-layout {
        display: grid;
        grid-template-columns: 1fr 2fr;
        gap: 2rem;
        align-items: flex-start;
    }

    .card {
        background-color: white; border-radius: var(--border-radius-lg);
        padding: 2.5rem; box-shadow: var(--shadow-lg);
    }
    .card h2 { font-size: 1.5rem; margin-bottom: 1.5rem; }

    /* Form & Table Styling */
    .form-group label { display: block; margin-bottom: 0.5rem; font-weight: 600; }
    .form-control {
        width: 100%; padding: 14px 18px; border-radius: var(--border-radius-md);
        background-color: var(--color-bg-light); border: 1px solid var(--color-border);
        font-size: 1rem; transition: all 0.3s ease;
    }
    .form-control:focus {
        background-color: white; border-color: var(--color-primary-start);
        box-shadow: 0 0 0 3px rgba(74, 0, 224, 0.15); outline: none;
    }
    .product-table { width: 100%; border-collapse: collapse; }
    .product-table th, .product-table td {
        padding: 1rem 1.5rem; text-align: left; vertical-align: middle;
        border-bottom: 1px solid var(--color-border);
    }
    .product-table th { font-weight: 600; font-size: 0.9rem; color: var(--color-text-muted); }
    .product-table tr:last-child td { border-bottom: none; }

    @media (max-width: 992px) {
        .product-layout { grid-template-columns: 1fr; }
    }
</style>

<div class="container" style="padding-top: 3rem; padding-bottom: 3rem;">
    <div class="page-header">
        <h1><i class="fas fa-box-open"></i> Kelola Produk</h1>
        <p>Atur produk yang ditampilkan di halaman utama seperti Hosting, VPS, dll.</p>
    </div>

    <div class="product-layout">
        <div class="card">
            <h2>Tambah Produk</h2>
            <form action="/admin/products/create" method="POST">
                <div class="form-group">
                    <label for="name">Nama Produk</label>
                    <input type="text" name="name" id="name" class="form-control" required placeholder="Cth: Personal">
                </div>
                <div class="form-group">
                    <label for="description">Deskripsi Singkat</label>
                    <input type="text" name="description" id="description" class="form-control" required>
                </div>
                <div class="form-group">
                    <label for="price">Harga (angka saja)</label>
                    <input type="number" name="price" id="price" class="form-control" required placeholder="Cth: 12000">
                </div>
                <div class="form-group">
                    <label for="features">Fitur (pisahkan dengan koma)</label>
                    <input type="text" name="features" id="features" class="form-control" placeholder="1 Website, 10GB SSD, ...">
                </div>
                <div class="form-group">
                    <label for="icon">Ikon (Font Awesome)</label>
                    <input type="text" name="icon" id="icon" class="form-control" value="fas fa-server" placeholder="Cth: fas fa-user">
                </div>
                 <div class="form-group">
                    <label style="display: flex; align-items: center; gap: 10px;">
                        <input type="checkbox" name="isFeatured" checked style="width: 20px; height: 20px;"> 
                        <span>Tampilkan di Halaman Utama</span>
                    </label>
                </div>
                <button type="submit" class="btn btn-primary" style="width: 100%;">Simpan Produk</button>
            </form>
        </div>

        <div class="card">
            <h2>Daftar Produk</h2>
            <div class="table-wrapper">
                <table class="product-table">
                    <thead>
                        <tr>
                            <th>Nama Produk</th>
                            <th>Harga</th>
                            <th style="text-align: right;">Aksi</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if (products && products.length > 0) { %>
                            <% products.forEach(product => { %>
                                <tr>
                                    <td>
                                        <i class="<%= product.icon %>" style="margin-right: 12px; width: 20px; text-align: center; color: var(--color-primary-start);"></i>
                                        <strong><%= product.name %></strong>
                                    </td>
                                    <td>Rp <%= product.price.toLocaleString('id-ID') %></td>
                                    <td style="text-align: right;">
                                        <form action="/admin/products/<%= product._id %>/delete" method="POST" onsubmit="return confirm('Yakin hapus produk ini?')">
                                            <button type="submit" class="btn btn-danger btn-sm"><i class="fas fa-trash"></i></button>
                                        </form>
                                    </td>
                                </tr>
                            <% }) %>
                        <% } else { %>
                            <tr><td colspan="3" style="text-align: center; padding: 40px;">Belum ada produk.</td></tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<%- include('../partials/footer') %>