<%- include('../partials/header', { title: `Tiket: ${ticket.subject}` }) %>

<style>
    /*
    ============================================
    --- VIEW TICKET (CHAT) PAGE STYLING ---
    ============================================
    */
    .page-header {
        margin-bottom: 2rem;
    }
    .page-header h1 {
        font-size: clamp(1.8rem, 4vw, 2.2rem);
        font-weight: 700;
        color: var(--color-text-dark);
        margin: 0;
    }

    /* Support Status Banner */
    .support-status {
        padding: 1rem 1.5rem;
        border-radius: var(--border-radius-md);
        margin-bottom: 2rem;
        text-align: center;
        font-weight: 500;
    }
    .support-status.pending { background-color: #fff8e8; color: #f59e0b; border: 1px solid #fde68a; }
    .support-status.assigned { background-color: #e7f7f2; color: #0d8a59; border: 1px solid #9AE6B4; }

    /* Chat Area */
    .chat-card {
        background-color: white;
        border-radius: var(--border-radius-lg);
        padding: 2rem;
        box-shadow: var(--shadow-md);
    }
    .chat-container {
        display: flex;
        flex-direction: column;
        gap: 1.5rem;
    }
    .chat-bubble {
        max-width: 80%;
        padding: 1rem 1.25rem;
        border-radius: var(--border-radius-lg);
        word-wrap: break-word;
        line-height: 1.6;
    }
    .bubble-header {
        display: flex;
        align-items: center;
        gap: 10px;
        margin-bottom: 0.75rem;
    }
    .bubble-header .avatar-wrapper { width: 32px; height: 32px; padding: 2px; }
    .bubble-header .name { font-weight: 700; }
    .bubble-header .timestamp { font-size: 0.8rem; color: var(--color-text-muted); }
    
    /* User's Message */
    .user-reply {
        background: var(--gradient-primary);
        color: white;
        align-self: flex-end;
        border-radius: var(--border-radius-lg) var(--border-radius-lg) 0 var(--border-radius-lg);
    }
    .user-reply .timestamp { color: rgba(255, 255, 255, 0.7); }
    
    /* Support's Reply */
    .support-reply {
        background-color: var(--color-bg-light);
        color: var(--color-text-dark);
        align-self: flex-start;
        border: 1px solid var(--color-border);
        border-radius: var(--border-radius-lg) var(--border-radius-lg) var(--border-radius-lg) 0;
    }
    
    /* Attachments */
    .attachment-box {
        margin-top: 1rem; padding: 0.75rem;
        border-radius: var(--border-radius-md);
        display: inline-block;
        border: 1px solid rgba(0,0,0,0.05);
    }
    .user-reply .attachment-box { background-color: rgba(255,255,255,0.1); border-color: rgba(255,255,255,0.2); }
    .support-reply .attachment-box { background-color: white; }
    .attachment-box a { text-decoration: none; color: inherit; display: flex; align-items: center; gap: 8px; font-size: 0.9rem; }
    
    /* Reply Form */
    .reply-card { margin-top: 2rem; }
    .reply-card h3 { font-size: 1.5rem; margin-bottom: 1.5rem; }
    .reply-card .form-control {
        min-height: 120px;
        background-color: var(--color-bg-light);
        border: 1px solid var(--color-border);
        border-radius: var(--border-radius-md);
    }
</style>

<div class="container" style="padding-top: 3rem; padding-bottom: 3rem;">
    <div class="page-header">
        <h1><%= ticket.subject %></h1>
    </div>

    <% if (ticket.assignedTo) { %>
        <div class="support-status assigned">Anda terhubung dengan Support: <strong><%= ticket.assignedTo.name %></strong></div>
    <% } else { %>
        <div class="support-status pending">Menunggu balasan dari tim support kami...</div>
    <% } %>

    <div class="chat-card">
        <div class="chat-container">
            <% ticket.messages.forEach(msg => { %>
                <% const isMyMessage = msg.sender._id.toString() === user.id.toString() %>
                <div class="chat-bubble <%= isMyMessage ? 'user-reply' : 'support-reply' %>">
                    <div class="bubble-header">
                        <%- include('../partials/avatar', { user: msg.sender, size: 'sm' }) %>
                        <span class="name"><%= msg.sender.name %></span>
                        <span class="timestamp"><%= new Date(msg.createdAt).toLocaleString('id-ID') %></span>
                    </div>
                    <p><%- msg.message.replace(/\n/g, '<br>') %></p>
                    <% if (msg.imageUrl) { %>
                        <div class="attachment-box">
                            <a href="<%= msg.imageUrl %>" target="_blank" rel="noopener noreferrer">
                                <i class="fas fa-image"></i>
                                <span>Lihat Lampiran</span>
                            </a>
                        </div>
                    <% } %>
                </div>
            <% }) %>
        </div>
    </div>

    <% if (ticket.status !== 'Ditutup') { %>
        <div class="card reply-card">
            <h3>Tulis Balasan</h3>
            <form action="/dashboard/tickets/<%= ticket._id %>/reply" method="POST" enctype="multipart/form-data">
                <div class="form-group">
                    <textarea name="message" class="form-control" rows="5" required placeholder="Tulis balasan Anda di sini..."></textarea>
                </div>
                <div class="form-group">
                    <label for="attachment">Lampirkan Foto (Opsional)</label>
                    <input type="file" name="attachment" id="attachment" class="form-control" accept="image/png, image/jpeg, image/gif">
                </div>
                <button type="submit" class="btn btn-primary" style="width: 100%; padding: 16px;">Kirim Balasan</button>
            </form>
        </div>
    <% } else { %>
        <div class="alert alert-info" style="text-align: center; margin-top: 2rem;">Tiket ini telah ditutup. Anda tidak dapat mengirim balasan lagi.</div>
    <% } %>
</div>
<%- include('../partials/footer') %>